<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layaout_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principal">

    <ImageView
        android:id="@+id/imagenegociovm"
        android:layout_width="105dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/bienvenido"
        app:layout_constraintEnd_toStartOf="@+id/textmostrar_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textmostrar"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/Gray_900"
        app:layout_constraintStart_toEndOf="@+id/imagenegociovm"
        app:layout_constraintTop_toBottomOf="@+id/textmostrar_id" />

    <TextView
        android:id="@+id/textmostrar_id"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:textColor="@color/Gray_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrols"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/tuinn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textmostrar">


        <TableLayout
            android:id="@+id/table_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </ScrollView>

    <ImageView
        android:id="@+id/imagenqr"
        android:layout_width="115dp"
        android:layout_height="109dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/tuinn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrols" />


</androidx.constraintlayout.widget.ConstraintLayout>